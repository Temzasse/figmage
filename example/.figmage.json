{
  "outDir": "./example/tokens",
  "tokenize": {
    "tokens": [
      {
        "name": "colors",
        "type": "color"
      },
      {
        "name": "typography",
        "type": "text"
      },
      {
        "name": "shadows",
        "type": "drop-shadow"
      },
      {
        "name": "spacing",
        "type": "width",
        "nodeName": "Figmage - Spacing"
      },
      {
        "name": "radii",
        "type": "radius",
        "nodeName": "Figmage - Radii"
      },
      {
        "name": "icons",
        "type": "svg",
        "nodeName": "Figmage - Icons"
      }
    ]
  },
  "codegen": {
    "defaults": {
      "filetype": "ts",
      "tokenCase": "camel"
    },
    "spacing": {
      "filetype": "json",
      "tokenCase": "lower"
    },
    "colors": {
      "exclude": {
        "group": ["Env"],
        "token": "\\b(Figma)\\b.*"
      }
    },
    "icons": {
      "filetype": "svg",
      "filename": "icon-sprite",
      "sprite": {
        "writeIds": true,
        "spriteDir": "./example/tokens/assets"
      }
    }
  }
}
